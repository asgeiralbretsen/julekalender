{
  "name": "julekalender-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Julekalender: React frontend, .NET backend, and Sanity Studio",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:studio\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && dotnet run",
    "dev:studio": "cd apps/studio && npm run dev",

    "build": "npm run build:frontend && npm run build:backend && npm run build:studio",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && dotnet build",
    "build:studio": "cd apps/studio && npm run build",

    "local:up": "docker-compose up -d",
    "local:down": "docker-compose down",
    "local:restart": "docker-compose restart",
    "local:logs": "docker-compose logs -f",
    "local:logs:backend": "docker-compose logs -f backend",
    "local:logs:frontend": "docker-compose logs -f frontend",
    "local:logs:studio": "docker-compose logs -f studio",

    "prod:up": "podman-compose -f docker-compose.prod.yml up -d",
    "prod:down": "podman-compose -f docker-compose.prod.yml down",
    "prod:restart": "podman-compose -f docker-compose.prod.yml restart",
    "prod:logs": "podman-compose -f docker-compose.prod.yml logs -f",
    "prod:logs:backend": "podman-compose -f docker-compose.prod.yml logs -f backend",
    "prod:logs:frontend": "podman-compose -f docker-compose.prod.yml logs -f frontend",
    "prod:logs:studio": "podman-compose -f docker-compose.prod.yml logs -f studio",

    "install:all": "npm install && cd apps/frontend && npm install && cd ../studio && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@sanity/color-input": "^4.0.6"
  }
}
