julekalender.albretsen.no {
    # Route API requests to backend
    handle /api/* {
        reverse_proxy backend:5000
    }
    
    # Route health endpoint to backend
    handle /health {
        reverse_proxy backend:5000
    }
    
    # Route all other requests to frontend
    handle /* {
        reverse_proxy frontend:5173
    }
    
    # Enable compression
    encode gzip
}
